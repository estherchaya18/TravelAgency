@model TravelAgency.Models.Clients

@{
    ViewData["Title"] = "Register";
}

<section class="page-section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Register</h2>
            </div>
        </div>
        <div class="row">
            <div style="margin-right: auto; margin-left: auto;" class="col-md-4">
                <form asp-action="Register">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Mail" class="control-label"></label>
                        <input asp-for="Mail" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div style="visibility:collapse" class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Director" /> @Html.DisplayNameFor(model => model.Director)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Register" class="btn btn-default" />
                    </div>
                    @if (ViewBag.Fail)
                    {
                        <div>Email already exist.</div>
                    }
                </form>
            </div>
        </div>
        </div>
    </section>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
        }
