@model TravelAgency.Models.Clients

@{
    ViewData["Title"] = "Login";
}


<section class="page-section" id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading text-uppercase">Login</h2>
            </div>
        </div>
        <div class="row">
            <div style="margin-right: auto; margin-left: auto;" class="col-md-4">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Mail" class="control-label"></label>
                        <input asp-for="Mail" class="form-control" />
                        <span asp-validation-for="Mail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-default" />
                    </div>
                    @if (ViewBag.Fail)
                    {
                        <div>Login failed. Please try again.</div>
                    }
                </form>
            </div>
        </div>
    </div>
</section>

