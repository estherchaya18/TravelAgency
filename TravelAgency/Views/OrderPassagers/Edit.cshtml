@model TravelAgency.Models.OrderPassagers

@{
    ViewData["Title"] = "Edit";
}

    <div style="margin-right: auto;
    width:fit-content;
    font-size:large;
    font-weight:100;
    text-emphasis-color:brown;
    margin-left: auto;
    color:brown;
    background-color:sandybrown;
    padding: 10vh;
    border-radius: 0 0 10px 10px;">
        <h2>Edit</h2>

        <h4>OrderPassagers</h4>
        <hr />
